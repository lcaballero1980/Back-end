<div class="container" style="margin: 100px 0 ">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la tarea</h4>
            <form action="/admin/principal/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{tareas.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{tareas.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{tareas.subtitulo}}">
                </div>
                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{tareas.cuerpo}}</textarea>
                </div>

                <div class="mb-3 row">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{tareas.img_id}}">
                    </p>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p>{{messaje}}</p>
            {{/if}}
        </div>
    </div>

</div>